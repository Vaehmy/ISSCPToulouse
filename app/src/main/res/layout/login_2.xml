<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:longClickable="false"
        android:tileMode="disabled"
        android:gravity="top"
    android:background="#9aca61">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/jumpinbiglogo"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:foregroundGravity="center_horizontal"
            android:layout_marginTop="-70dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_addStreet"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="40dp"
            android:layout_alignParentTop="false"
            android:typeface="serif"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="50dp"
            android:paddingBottom="10dp"
            android:background="#c8ffffff"
            android:layout_marginRight="40dp"
            android:paddingTop="10dp" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/et_addPostalCode"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/textView6"
            android:phoneNumber="true"
            android:typeface="serif"
            android:layout_marginBottom="10dp"
            android:background="#c8ffffff"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="40dp"
            android:autoText="false" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/et_addCity"
            android:gravity="center_horizontal"
            android:singleLine="false"
            android:typeface="serif"
            android:background="#c8ffffff"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textView6"
            android:layout_marginRight="40dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_register"
            android:src="@drawable/go"
            android:background="#00ffffff"
            android:padding="20dp"
            android:layout_below="@+id/et_addPostalCode"
            android:layout_alignRight="@+id/et_addCity"
            android:layout_alignEnd="@+id/et_addCity"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_backToLogin"
            android:layout_alignTop="@+id/ib_register"
            android:layout_alignLeft="@+id/et_addPostalCode"
            android:layout_alignStart="@+id/et_addPostalCode"
            android:src="@drawable/back"
            android:background="#00ffffff"
            android:padding="20dp"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Votre adresse"
            android:id="@+id/textView5"
            android:layout_below="@+id/imageView2"
            android:layout_alignLeft="@+id/et_addStreet"
            android:layout_alignStart="@+id/et_addStreet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Code Postal"
            android:id="@+id/textView6"
            android:layout_alignLeft="@+id/et_addStreet"
            android:layout_alignStart="@+id/et_addStreet"
            android:layout_below="@+id/et_addStreet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ville"
            android:id="@+id/textView7"
            android:layout_alignLeft="@+id/et_addCity"
            android:layout_alignStart="@+id/et_addCity"
            android:layout_alignBottom="@+id/textView6" />

    </RelativeLayout>

    </RelativeLayout>