<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9aca61"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/jumpinbiglogo"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:foregroundGravity="center_horizontal"
        android:layout_marginTop="-80dp" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Départ"
        android:id="@+id/textView1"
        android:textStyle="italic"
        android:background="#bfe88e" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_depart"
        android:hint="@string/edit1"
        />

    <TextView
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Destination"
        android:id="@+id/textView2"
        android:textStyle="italic"
        android:background="#bfe88e" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_destination"
        android:hint="@string/edit2"/>

    <TextView
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Heure de départ"
        android:id="@+id/textView3"
        android:textStyle="italic"
        android:background="#bfe88e" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_Hdepart"
        android:hint="@string/edit3"/>

    <TextView
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Heure d&apos;arrivé"
        android:id="@+id/textView4"
        android:textStyle="italic"
        android:background="#bfe88e" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_Hdestination"
        android:hint="@string/edit4"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/bt_button"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15"
        android:background="#e3e324" />

</LinearLayout>